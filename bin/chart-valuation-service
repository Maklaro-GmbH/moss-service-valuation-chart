#!/usr/bin/env node

const fs = require('fs');
const generateChart = require('../index.js')

const jsonAsString = fs.readFileSync("/dev/stdin", "utf-8");

const outputPromise = generateChart(jsonAsString);
outputPromise
    .then(
        (buffer) => {
            process.stdout.write(buffer);
            process.exit(0);
        }
    )
    .catch(
        (error) => {
            process.stderr.write(error);
            process.exit(1);
        }
    );
