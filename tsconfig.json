{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "./src",
    "./tests"
  ],
  "compilerOptions": {
    "lib": ["DOM"],
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  }
}
